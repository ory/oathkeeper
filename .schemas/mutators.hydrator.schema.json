{
  "$id": "https://raw.githubusercontent.com/ory/oathkeeper/master/.schemas/mutators.hydrator.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Hydrator Mutator Configuration",
  "description": "This section is optional when the mutator is disabled.",
  "properties": {
    "api": {
      "additionalProperties": false,
      "required": [
        "url"
      ],
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "auth": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "basic": {
              "required": [
                "username",
                "password"
              ],
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        },
        "retry": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "number_of_retries": {
              "type": "number",
              "minimum": 0,
              "default": 100
            },
            "delay_in_milliseconds": {
              "type": "number",
              "minimum": 0,
              "default": 3
            }
          }
        }
      }
    }
  },
  "required": [
    "api"
  ],
  "additionalProperties": false
}
