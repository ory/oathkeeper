      }
    },
    "log": {
      "$ref": "https://raw.githubusercontent.com/ory/x/master/.schemas/logrusx/viper.schema.json#"
    },
    "profiling": {
      "$ref": "https://raw.githubusercontent.com/ory/x/master/.schemas/profilingx/viper.schema.json#"
    }
  },
  "required": [],
  "additionalProperties": false
}